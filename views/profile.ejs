<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profil Saya</title>
    <style>
        body { font-family: sans-serif; background: #f0f2f5; padding: 40px; }
        .container { max-width: 900px; margin: 0 auto; }
        
        /* Kartu Anggota (Gamifikasi + QR) */
        .profile-card {
            background: linear-gradient(135deg, #3498db, #8e44ad);
            color: white;
            padding: 30px;
            border-radius: 15px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            box-shadow: 0 10px 20px rgba(52, 152, 219, 0.3);
            margin-bottom: 40px;
            flex-wrap: wrap; /* Supaya aman di layar kecil */
            gap: 20px;
        }

        .left-section {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        /* Kotak QR Code */
        .qr-box {
            background: white;
            padding: 10px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }
        .qr-img {
            width: 100px;
            height: 100px;
            display: block;
        }

        .user-info h2 { margin: 0; font-size: 2em; }
        .user-info p { margin: 5px 0 0; opacity: 0.9; }
        .role-badge { 
            margin-top: 5px; 
            font-size: 0.8em; 
            background: rgba(255,255,255,0.2); 
            display: inline-block; 
            padding: 2px 8px; 
            border-radius: 4px; 
            font-weight: bold;
        }

        .stats { text-align: right; margin-left: auto; }
        .xp-badge { background: rgba(255,255,255,0.2); padding: 5px 15px; border-radius: 20px; font-weight: bold; }

        /* Judul Section */
        h3 { color: #333; border-left: 5px solid #3498db; padding-left: 10px; margin-bottom: 20px; margin-top: 40px; }

        /* List Peminjaman */
        .loan-list { display: grid; gap: 15px; }
        .loan-item {
            background: white;
            padding: 20px;
            border-radius: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }
        
        .book-details { flex-grow: 1; }
        .book-title { font-weight: bold; font-size: 1.1em; color: #2c3e50; }
        .book-date { font-size: 0.9em; color: #7f8c8d; margin-top: 5px; }
        .due-date { color: #e74c3c; font-weight: bold; }
        
        /* Gaya Tombol Return */
        .btn-return {
            background: #27ae60;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            font-weight: bold;
            transition: 0.2s;
        }
        .btn-return:hover { background: #219150; }

        /* Gaya Item History (Abu-abu) */
        .history-item { opacity: 0.7; background: #f8f9fa; }
        .status-badge { background: #95a5a6; color: white; padding: 5px 10px; border-radius: 5px; font-size: 0.8em; }

        .empty-state { text-align: center; color: #777; padding: 20px; background: white; border-radius: 10px; border: 1px dashed #ccc; }
        .btn-back { display: inline-block; margin-top: 30px; text-decoration: none; color: #555; }
    </style>
</head>
<body>

    <div class="container">
        <div class="profile-card">
            <div class="left-section">
                <div class="qr-box">
                    <img src="<%= qrImage %>" alt="QR Member" class="qr-img">
                </div>
                
                <div class="user-info">
                    <h2><%= user.username %></h2>
                    <p><%= user.email %></p>
                    <span class="role-badge"><%= user.role.toUpperCase() %></span>
                </div>
            </div>

            <div class="stats">
                <div style="font-size: 3em; font-weight: bold;"><%= user.level %></div>
                <div>Level Pembaca</div>
                <div style="margin-top: 10px;">
                    <span class="xp-badge">‚ú® <%= user.xpPoints %> XP</span>
                </div>
            </div>
        </div>

        <% 
            const activeLoans = loans.filter(l => l.status === 'active');
            const historyLoans = loans.filter(l => l.status === 'returned');
        %>

        <h3>üìñ Sedang Dipinjam</h3>

        <% if (activeLoans.length === 0) { %>
            <div class="empty-state">Tidak ada buku yang sedang dipinjam.</div>
        <% } else { %>
            <div class="loan-list">
                <% activeLoans.forEach(loan => { %>
                    <div class="loan-item">
                        <div class="book-details">
                            <div class="book-title"><%= loan.bookCopy.book.title %></div>
                            <div class="book-date">
                                Batas Kembali: <span class="due-date"><%= loan.dueDate.toLocaleDateString('id-ID') %></span>
                            </div>
                        </div>
                        
                        <form action="/return/<%= loan.id %>" method="POST">
                            <button type="submit" class="btn-return">Balikin Buku</button>
                        </form>
                    </div>
                <% }) %>
            </div>
        <% } %>

        <h3>üìú Riwayat Bacaan (History)</h3>

        <% if (historyLoans.length === 0) { %>
            <div class="empty-state">Belum ada riwayat bacaan.</div>
        <% } else { %>
            <div class="loan-list">
                <% historyLoans.forEach(loan => { %>
                    <div class="loan-item history-item">
                        <div class="book-details">
                            <div class="book-title"><%= loan.bookCopy.book.title %></div>
                            <div class="book-date">
                                Dikembalikan: <%= loan.returnDate ? loan.returnDate.toLocaleDateString('id-ID') : '-' %>
                            </div>
                        </div>
                        <span class="status-badge">‚úÖ Selesai</span>
                    </div>
                <% }) %>
            </div>
        <% } %>

        <a href="/" class="btn-back">‚Üê Kembali ke Halaman Utama</a>
    </div>

</body>
</html>